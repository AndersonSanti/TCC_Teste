<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintGuide_begin="@android:dimen/dialog_min_width_major"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/mostra_Temp"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:autoText="true"
        android:contentDescription=" Volume de liquido na caneca em %"
        android:ems="10"
        android:inputType="numberSigned"
        android:numeric="integer"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintTop_toBottomOf="@+id/Vol"
        app:layout_optimizationLevel="standard"
        tools:layout_editor_absoluteX="224dp" />

    <EditText
        android:id="@+id/Vol"
        android:layout_width="79dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:text="Volume"
        android:textStyle="bold"
        android:visibility="visible"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="42dp" />

    <EditText
        android:id="@+id/Temp"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="text"
        android:text="Temperatura"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_creator="@android:integer/config_mediumAnimTime"
        tools:layout_constraintWidth_percent="@sample/tools:backgrounds/scenic"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="46dp" />

    <EditText
        android:id="@+id/Mostra_Temp"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:autoText="true"
        android:contentDescription="Temperatura em ÂºC"
        android:ems="10"
        android:inputType="numberSigned"
        android:numeric="integer"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintTop_toBottomOf="@+id/Temp"
        app:layout_optimizationLevel="standard"
        tools:layout_editor_absoluteX="54dp" />

</android.support.constraint.ConstraintLayout>